{% extends "base#{template}.twig" %}

{% block preheader %}
	<ul class="prenav">
				<li class="prenav-item active" data-target=".preheader-items.latest"><i class="icon-time"></i> Latest</li>
				<li class="prenav-item" data-target=".preheader-items.popular"><i class="icon-flash"></i> Popular</li>
        <li class="prenav-item has-icon-link" data-target=".preheader-items.popular"><a target="_blank" href="//facebook.com/deadantco"><i class="icon-facebook2"></i></a></li>
        <li class="prenav-item has-icon-link" data-target=".preheader-items.popular"><a target="_blank" href="//twitter.com/deadantco"><i class="icon-twitter"></i></a></li>
        <li class="prenav-item has-icon-link" data-target=".preheader-items.popular"><a target="_blank" href="//instagram.com/deadantco"><i class="icon-instagram"></i></a></li>
				{# <li class="prenav-item"><i class="icon-chart-line"></i> Trending</li> #}
			</ul>
	<aside class="preheader ">
		<ul class="preheader-items latest">
		{% for post in preheader %}
			<li class="preheader-item" style="background-image: linear-gradient(to bottom, rgba(0,0,0,0.4), rgba(0,0,0,0.7)), url({{post.thumbnail.src}});">
				<div class="preheader-item-tags">
					{% for cat in post.categories %}
						{% if loop.index0 < 4 %}
							<a href="/category/{{cat.slug}}" class="preheader-item-tag tag">{{cat.title}}</a>
						{% endif %}
					{% endfor %}
				</div>
				<a href="{{post.link}}">{{post.title}}</a>
			</li>
		{% endfor %}
		</ul>
		<ul class="preheader-items popular inactive">
		{% for post in popular %}
			{% set categories = function('get_the_terms', post.id, 'category' ) %}
			{% set tid = function("get_post_thumbnail_id", post.id) %}
			{% set img = function("wp_get_attachment_image_src", tid) %}
			<li class="preheader-item" style="background-image: linear-gradient(to bottom, rgba(0,0,0,0.4), rgba(0,0,0,0.7)), url({{ img[0] }});">
				<div class="preheader-item-tags">
					{% for cat in categories %}
						{% if loop.index0 < 4 %}
							{# <span class="preheader-item-tag tag">{{cat.name}}</span> #}
							<a href="/category/{{cat.slug}}" class="preheader-item-tag tag">{{cat.name}}</a>
						{% endif %}
					{% endfor %}
				</div>
				<a href="{{post.guid}}">{{post.title}}</a>
			</li>
		{% endfor %}
		</ul>
