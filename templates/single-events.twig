{% set sidebar = false %}
{% extends "base.twig" %}
{% block fullsize %}
	<div class="content-wrapper content single-event">
		<div class="back-holder" style="background-image:linear-gradient(RGBA(230, 100, 101, 0.70), rgba(144, 19, 254, 1.00)), url({{post.thumbnail.src|resize(800, 300)}})"></div>
		<article class="container post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
			<section class="article-content">
				<div class="article-meta">
					{% for tag in post.tags %}
						<span style="background: RGBA(238, 99, 64, 1.00); transform: scale(1.1); margin-right: 20px;" class="preheader-item-tag tag">{{tag.title}}</span>
					{% endfor %}
				</div>
				<h1 class="article-h1">{{ post.title }}</h1>
				<div class="row flex-row flex-md-row-reverse">
					<div class="col-xs-12 col-md-4">
						<img class="event-image" src="{{ post.thumbnail.src|resize(300, 300) }}">
					</div>
					<div class="col-xs-12 col-md-4">
						{{post.content}}
					</div>
					<div class="col-xs-12 col-md-4">
						<div class="event-meta-container">
							<div class="event-meta-item">
								<span class="label">Comic{% if post.meta('artists')|length > 1 %}s{% endif %}
								</span>
								{% for artist in post.meta('artists') %}
									<a href="{{artist.artist.guid}}">{{artist.artist.post_title}}</a>
									{% if not loop.last %},&nbsp;{% endif %}
								{% endfor %}
							</div>
							{% if post.meta('date') %}<div class="event-meta-item"><span class="label">Date</span>{{post.meta('date')|date("d F Y")}}</div>{% endif %}
							{% if post.meta('ticket_price') %}<div class="event-meta-item"><span class="label">Price</span>{{post.meta('ticket_price')}}</div>{% endif %}
							{% if post.meta('venue') %}<div class="event-meta-item"><span class="label">Venue</span>{{post.meta('venue')}}</div>{% endif %}
							{% if post.meta('location') %}<div class="event-meta-item smaller"><span class="label">Address</span>{{post.meta('location')['address']}}</div>{% endif %}
						</div>
					</div>
				</div>
				<div class="event-meta"></div>
				<div class="other">
					<h2 class="rounded">Related Stories.</h2>
					<div class="row">
						<div class="col-xs-12 col-md-3">
							<div class="articles-artist">
								<div class="title">Some title</div>
								<div class="sometags"></div>
							</div>
						</div>
						<div class="col-xs-12 col-md-3">Bong</div>
						<div class="col-xs-12 col-md-3">Bong</div>
						<div class="col-xs-12 col-md-3">Bong</div>
					</div>
				</div>
				<div class="article-body">
            <div class="acf-map">
<div class="marker" data-lat="{{Post(post.meta('venue')).meta('location').lat}}" data-lng="{{Post(post.meta('venue')).meta('location').lng}}"></div>
            </div>
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
