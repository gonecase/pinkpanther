{% extends "base.twig" %}

{% block content %}
	<form class="password-form" action="{{site.link}}/wp-login.php?action=postpass" method="post">
		<div class="field">
			<label class="label" for="pwbox-{{post.ID}}">Password:</label>
			<div class="control">
				<input class="password-box input" name="post_password" id="pwbox-{{post.ID}}" type="password" placeholder="Password" size="20" maxlength="20" />
			</div>
		</div>
		<div class="control">
			<input class="button is-primary password-btn" type="submit" name="Submit" value="Submit" />
		</div>
	</form>
{% endblock %}
